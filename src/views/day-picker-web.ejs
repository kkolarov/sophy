    <div class="container">
      <div class="col-md-6 col-md-offset-3">
        <h2>Получете видимост и контрол</h2>
        <p>Uber for Business помага на вашата фирма да управлява по-лесно и ефективно пътуванията с Uber и разписките на служителите. Вижте къде, кога и как пътува вашият екип.</p>

        <form>
          <div class="form-group">
            <input type="text" class="form-control" id="day-picker" placeholder="Натиснете полетo за избиране на дата">
          </div>

          <div>
            <div id="success-message" class="alert alert-success hidden" role="alert"></div>
          </div>
        </form>
      </div>
    </div>

    <script type="" src="/vendor/jquery/dist/jquery.min.js"></script>
    <script type="" src="/vendor/moment/min/moment.min.js"></script>
    <script type="" src="/vendor/pickadate/lib/picker.js"></script>
    <script type="" src="/vendor/pickadate/lib/picker.date.js"></script>
    <script type="" src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

    <script>
      var fbUser = 1213342445381976;

      function successMessage(pageLink, dentistName, date) {
        return 'Успешно избрана дата! Натиснете <a href="' + pageLink + '" class="alert-link">тук</a>, за да се върнете в чата на страницата на ' + dentistName + ' и да завършите процедурата по запазване на час.';
      }

      $.ajax({
        url: '/conversations/' + encodeURIComponent(fbUser)
      })
      .done(function(conversation) {
        if (conversation) {
          $('#employee-name').text(conversation.dentist.name);

          $('#day-picker').pickadate({
            onSet: function(context) {
              if (context.select) {
                var metaDay = $('#day-picker').val();
                var day = moment(new Date(metaDay)).format("DD.MM.YYYY");
                $('#day-picker').val(day);

                $('#success-message').removeClass('hidden');
                $('#success-message').html(successMessage(conversation.page.chatLink, conversation.dentist.name, day));

                $.ajax({
                  url: '/predictions/' + encodeURIComponent(fbUser),
                  method: 'POST',
                  data: {
                    text: metaDay
                  }
                });
              }
            },
            monthsFull: ['Януари', 'Февруари', 'Март', 'Април', 'Май', 'Юни', 'Юли', 'Август', 'Септември', 'Октомври', 'Ноември', 'Декември'],
            weekdaysShort: ['Нед', 'Пон', 'Вто', 'Сря', 'Чет', 'Пет', 'Съб'],
            today: '',
            clear: '',
            close: '',
            format: 'yyyy-mm-dd'
          });
        }
      });

    </script>
  </body>
