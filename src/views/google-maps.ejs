<!DOCTYPE>
<html>
  <head>
    <title>Google Maps</title>

    <style>
      body {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <script type="" src="/vendor/jquery/dist/jquery.min.js"></script>

    <script>
      $(document).ready(function() {

      });

      window.extAsyncInit = function() {
        MessengerExtensions.getUserID(function success(uids) {
          var fbUserId = uids.psid;

          $.ajax({
            url: '/conversations/' + encodeURIComponent(fbUserId)
          })
          .done(function(context) {
            var address = context.dentist.address;
            var source = "https://www.google.com/maps/embed/v1/place?key=AIzaSyDkmllVKlHnsMgrRJ9KiZ7UONlVuzvAlfA&q=" + encodeURIComponent(address);

            $("body").append('<iframe src="' + source + '" width="100%" height="100%" frameborder="0" </iframe>');
          });
        });
      }
    </script>

    <script>
    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));
    </script>
  </body>
</html>
